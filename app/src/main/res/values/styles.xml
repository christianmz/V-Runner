        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/color_secondary_light</item>
    </style>

    <style name="TextDisplayBlue" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/baloo_da2</item>
        <item name="android:fontFamily">@font/baloo_da2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="TextDisplayWhite" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/baloo_da2</item>
        <item name="android:fontFamily">@font/baloo_da2</item>
        <item name="android:textColor">@color/color_white</item>
