<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>
    </style>

    <style name="Base.MyTheme" parent="Base.MaterialThemeBuilder">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_gray_light</item>
        <item name="colorSecondary">@color/color_primary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="android:colorBackground">@color/color_gray_light</item>
        <item name="colorSurface">@color/color_white</item>
        <item name="colorError">@color/color_primary_variant</item>
        <item name="colorOnBackground">@color/color_secondary_light</item>
        <item name="colorOnSurface">@color/color_secondary_light</item>
        <item name="colorOnError">@color/color_gray_light</item>
        <item name="colorOnPrimary">@color/color_gray_light</item>
        <item name="colorOnSecondary">@color/color_gray_light</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyTheme.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyTheme.MediumComponent
        </item>
    </style>

    <style name="MyTheme.DayNight" parent="Base.MyTheme" />

</resources>